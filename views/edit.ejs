<%- include ('./base/header.ejs') %>

<div class="container">
    <div class="alert bg-success mt-3">
        <h4 class="text-center">Update your Record</h4>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col"></div>
        <div class="col">
            <form action="/update/<%= record._id %>" method="POST">
                <div class="field my-3">
                    <label for="" class="form-label">Name</label>
                    <input type="text" class="form-control" name="name"value="<%= record.name %>" placeholder="Enter Name">
                </div>

                <div class="field my-3">
                    <label for="" class="form-label">city</label>
                    <input type="text" class="form-control" name="city" value="<%= record.city %>" placeholder="Enter city">
                </div>

                <div class="field my-3">
                    <label for="" class="form-label">email</label>
                    <input type="text" class="form-control" name="email" value="<%= record.email %>" placeholder="Enter email">
                </div>

                <div class="field my-3">
                    <label for="" class="form-label">Contact</label>
                    <input type="text" class="form-control" name="contact" value="<%= record.contact %>" placeholder="Enter Contact">
                </div>

                <input type="submit" value="Create" class="btn btn-warning w-100">
            </form>
        </div>
        <div class="col"></div>
    </div>
</div>



<%- include ('./base/footer.ejs') %>